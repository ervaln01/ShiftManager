<html>
<head>
    <link rel="stylesheet" href="~/css/styles.css" type="text/css" />
    <script src="~/js/jquery-3.5.1.min.js"></script>
    <script src="~/js/Index.js"></script>
    <script src="~/js/IndexScripts.js"></script>
</head>
<body>
    <table class="icon-bar" style="margin-left: -150px" id="colorLegend"></table>
    <div style="text-align: center; font-size: 25px; font-weight: bold">Display of shifts.</div>
    <br />
    <div>
        <table width="100%">
            <tr>
                <td width="25%" style="text-align:center">
                    <input type="date" id="dateBefore" onchange="{ BlockChangeDate(true); RangeTimelines($('#dateBefore'), $('#dateAfter'), '@Url.Action("GetTimelines")', '#table', '@Url.Action("EditDay")'); }" />
                </td>
                <td width="25%" style="text-align: center ">
                    <input type="date" id="dateAfter" onchange="{ BlockChangeDate(false); RangeTimelines($('#dateBefore'), $('#dateAfter'), '@Url.Action("GetTimelines")', '#table', '@Url.Action("EditDay")'); }" />
                </td>
                <td width="25%" style="text-align: center ">
                    <button style="width: 110px" onclick="$('#add').click()">Add</button>
                </td>
                <td width="25%" style="text-align: center ">
                    <button style="width: 110px" onclick="$('#export').click()">Export to excel</button>
                </td>
            </tr>
        </table>
    </div>
    <br />
    <div>
        <table id="table" style="width: 100%; text-align: center"> </table>
    </div>
    <partial name="_IndexForms" />
    <partial name="_IndexScripts" />
</body>
</html>